<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.papcreativaexpress.Controllers.LoginController">
   <children>
      <ImageView fx:id="fondoImageView" fitHeight="416.0" fitWidth="623.0" />

      <AnchorPane layoutX="141.0" layoutY="33.0" prefHeight="305.0" prefWidth="311.0">
         <children>
            <VBox layoutX="104.0" layoutY="101.0" prefHeight="120.0" prefWidth="148.0">
               <children>
                  <TextField fx:id="tfCorreoElectronico" promptText="Correo Electrónico" />
                  <TextField fx:id="tfContrasenia" promptText="Contraseña">
                     <VBox.margin>
                        <Insets top="60.0" />
                     </VBox.margin>
                  </TextField>
               </children>
            </VBox>
            <Label layoutX="134.0" layoutY="22.0" text="Login" textFill="#9b59b6">
               <font>
                  <Font name="Arial" size="36.0" />
               </font>
            </Label>
            <Separator layoutX="134.0" layoutY="64.0" prefHeight="11.0" prefWidth="89.0" style="-fx-background-color: #9b59b6;" />
            <ImageView fx:id="usuarioImageView" fitHeight="42.0" fitWidth="50.0" layoutX="39.0" layoutY="101.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="contraseniaImageView" fitHeight="42.0" fitWidth="50.0" layoutX="39.0" layoutY="187.0" pickOnBounds="true" preserveRatio="true" />

            <Button fx:id="btnIngresar" layoutX="46.0" layoutY="268.0" mnemonicParsing="false" onAction="#OnActionIngresar" prefHeight="23.0" prefWidth="231.0" text="Ingresar" />
         </children>
      </AnchorPane>
      <Button fx:id="btnRecuperarContrasenia" layoutX="431.0" layoutY="368.0" mnemonicParsing="false" onAction="#OnActionRecuperarContrasenia" prefHeight="23.0" prefWidth="185.0" text="¿Haz olvidado tu contraseña?">
         <font>
            <Font size="1.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
